@using Calculator.Web.Expressions.Controllers
@model Calculator.Web.Expressions.Models.Response.History.ExpressionHistoryViewModel;

<!DOCTYPE html>
<html>
<head>
    <title>Calculator</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Experssions/expressionCalculator.css">
</head>
<body>
<div class="container">
    <form id="expression-form" class="d-flex align-items-center" url="@Url.Action(nameof(ExpressionsController.Evaluate), "Expressions")">
        <input class="form-control-lg" type="text" placeholder="Enter expression" name="expression" id="expression-input">
        <button type="submit" class="btn btn-primary ml-2">Evaluate</button>
    </form>
    <div class="history-container">
        <span class="history-span">History</span>
        <ul class="history-list" id="expression-history-list">
            @foreach (var historyModel in Model.EvaluatedExpressionsHistory)
            {
                <li>
                    @historyModel.Expression
                </li>
                <li>
                    = @historyModel.Result
                </li>
            }
        </ul>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://unpkg.com/@@popperjs/core@2"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script><script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="~/js/Expressions/expressionCalculator.js"></script>
</body>
</html>